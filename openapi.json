  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login pengguna dan mendapatkan token autentikasi",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@danatepat.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "code": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "userId": {
                          "type": "integer"
                        },
                        "email": {
                          "type": "string"
                        },
                        "fullName": {
                          "type": "string"
                        },
                        "phoneNumber": {
                          "type": "string"
                        },
                        "role": {
                          "type": "string",
                          "enum": [
                            "ADMIN",
                            "MERCHANT",
                            "BENEFICIARY"
                          ]
                        },
                        "status": {
                          "type": "string"
                        },
                        "token": {
                          "type": "string"
                        },
                        "expiresIn": {
                          "type": "integer"
                        },
                        "tokenType": {
                          "type": "string"
                        }
                      }
                    },
                    "timestamp": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/program/api/programs": {
      "post": {
        "summary": "Membuat program",
        "tags": [
          "Programs"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "description",
                  "startDate",
                  "endDate",
                  "anggaran"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Bantuan ITB 2026"
                  },
                  "description": {
                    "type": "string",
                    "example": "Program bantuan resmi dari ITB"
                  },
                  "startDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2026-01-10"
                  },
                  "endDate": {
                    "type": "string",
                    "format": "date",
                    "example": "2026-01-31"
                  },
                  "anggaran": {
                    "type": "number",
                    "example": 100000000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Program created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "code": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "programManagerId": {
                          "type": "integer"
                        },
                        "startDate": {
                          "type": "string",
                          "format": "date"
                        },
                        "endDate": {
                          "type": "string",
                          "format": "date"
                        },
                        "anggaran": {
                          "type": "number"
                        },
                        "currencyTokenName": {
                          "type": "string"
                        },
                        "status": {
                          "type": "string",
                          "enum": [
                            "DRAFT",
                            "ACTIVE",
                            "INACTIVE"
                          ]
                        },
                        "kategori": {
                          "type": "string",
                          "nullable": true
                        },
                        "parentProgram": {
                          "type": "object",
                          "nullable": true
                        }
                      }
                    },
                    "timestamp": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
